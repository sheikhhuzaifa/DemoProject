<%= form_with(model: @engineer, url: phase_engineers_path(@phase), remote: true, class: "needs-validation") do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.collection_select :email, User.with_role(:Engineer), :email, :email, { include_blank: true }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", target: '_blank', class: "btn btn-primary" %>
  </div>
<% end %>
