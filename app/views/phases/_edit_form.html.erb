<%= form_with(model: @phase, url: lead_phase_path(@lead, @phase), method: :patch, remote: true, class: "needs-validation") do |form| %>
  <%= form.hidden_field :id %>
<% if current_user.roles.exists?(name: "Business_Developer") %>
  <div class="form-group">
    <%= form.label :phase_type %>
    <%= form.text_field :phase_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>



  <div class="form-group">
    <%= form.label :creation_date %>
    <%= form.date_field :creation_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :completed %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>

  <div class="form-group">
    <%= form.label :completed_date %>
    <%= form.date_field :completed_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>

  <% elsif current_user.roles.exists?(name: "Technical_Manager") %>
   <div class="form-group">
    <%= form.label :completed %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>
  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
  <% end %>
<% end %>
