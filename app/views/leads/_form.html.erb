<%= form_with(model: @lead, remote: true, class: "needs-validation") do |form| %>

  <div class="form-group">
    <%= form.label :project_name %>
    <%= form.text_field :project_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :client_name %>
    <%= form.text_field :client_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :client_address %>
    <%= form.text_field :client_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :client_email %>
    <%= form.email_field :client_email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :client_contact %>
    <%= form.text_field :client_contact, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :platform_used %>
    <%= form.text_field :platform_used, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comments %>
    <%= form.text_area :comments, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :test_type %>
    <%= form.text_field :test_type, class: "form-control" %>
  </div>






  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
